<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leminect.strangee">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/Theme.Strangee">
        <activity android:name=".view.SingleChatActivity"/>
        <activity android:name=".view.StrangeeProfileActivity" />
        <activity android:name=".view.EditDetailsActivity" />
        <activity android:name=".view.WhoCheckedMeActivity" />
        <activity android:name=".view.SignUpActivity" />
        <activity
            android:name=".view.LoginActivity"
            android:theme="@style/LoginScreenTheme" />
        <activity
            android:name=".view.SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:hardwareAccelerated="true"
            android:theme="@style/MainActivityTheme" />
        <!--<activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Theme.Strangee" />-->

        <activity
            android:name="com.canhub.cropper.CropImageActivity"
            android:theme="@style/Theme.Strangee" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>