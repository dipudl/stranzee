<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:layout_margin="8dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_up_page_black_text"
            tools:text="Interested in"
            android:fontFamily="@font/poppins_medium"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="22dp"
            android:background="#DDDDDD" />

        <TextView
            android:id="@+id/smallTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_up_page_black_text"
            tools:text="@string/interested_in_popup_text"
            android:fontFamily="@font/poppins"
            android:textSize="14sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInput"
            style="@style/Widget.App.SignUpTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"
                tools:hint="@string/im_interested_in"
                android:maxLength="150"
                android:inputType="textMultiLine"
                android:textColor="@color/sign_up_page_black_text"
                android:textSize="17sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/largeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/sign_up_page_black_text"
            tools:text="Enter the topics that interest you &amp; separate them by comma. (Example: Music, Gaming, Tech)"
            android:fontFamily="@font/poppins"
            android:textSize="17sp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:layout_marginEnd="6dp"
                android:layout_marginStart="6dp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/okButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ok"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:textAllCaps="false"
                android:fontFamily="@font/poppins"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>
</layout>