<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textAllCaps">false</item>
        <item name="minHeight">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="hintTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="Widget.App.SignUpTextInputLayout" parent="Widget.Design.TextInputLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.SignUpTextInputLayout</item>
        <item name="hintTextColor">@color/sign_up_page_black_text</item>
        <item name="android:textColorHint">@color/sign_up_page_black_text</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ThemeOverlay.App.SignUpTextInputLayout" parent="">
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorControlHighlight">?attr/colorPrimary</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">?attr/colorPrimary</item>
    </style>

    <style name="NavDrawerText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#242134</item>
    </style>

    <style name="ChipText" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>